<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agence_du_soleil.Activities.ListItemActivity">

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints" />


    <ImageView android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/nom_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img"
        android:layout_alignTop="@+id/img"
        android:textStyle="bold"
        tools:text="Nom"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/prix_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/nom"
        android:layout_below="@+id/nom"
        tools:text="Prix"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/surface_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/prix_bien"
        android:layout_below="@+id/prix_bien"
        tools:text="Type"
        tools:ignore="MissingConstraints" />



</android.support.constraint.ConstraintLayout>