<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints" />

    <ImageView android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        android:contentDescription="Image" />

    <TextView android:id="@+id/nom_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img"
        android:layout_alignTop="@+id/img"
        android:textStyle="bold"
        tools:text="Nom" />

    <TextView android:id="@+id/prix_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/nom_bien"
        android:layout_below="@+id/nom_bien"
        tools:text="Prix" />

    <TextView
        android:id="@+id/surface_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prix_bien"
        android:layout_alignLeft="@+id/prix_bien"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="-19dp"
        android:textColor="@android:color/black"
        tools:text="Surface" />

    <TextView
        android:id="@+id/piece_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surface_bien"
        android:layout_alignLeft="@+id/surface_bien"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="-19dp"
        android:textColor="@android:color/black"
        tools:text="Pièces" />

    <TextView
        android:id="@+id/ville_bien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/piece_bien"
        android:layout_alignLeft="@+id/piece_bien"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-19dp"
        android:textColor="@android:color/black"
        tools:text="Pièces" />

    <TextView
        android:id="@+id/charge_bien"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ville_bien"
        android:layout_alignLeft="@+id/ville_bien"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-20dp"
        android:textColor="@android:color/black"
        tools:text="Charges" />

    <ImageView
        android:id="@+id/prix_img"
        android:layout_width="19dp"
        android:layout_height="15dp"
        android:layout_below="@+id/nom_bien"
        android:layout_alignLeft="@+id/nom_bien"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/euro"
        tools:background="#AAA" />
</RelativeLayout>